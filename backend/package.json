{
  "name": "serverless-demo",
  "version": "1.0.0",
  "description": "Demo of the serverless NodeJS app",
  "license": "MIT",
  "scripts": {
    "clean": "if [ -d 'pacts' ]; then rm -rf pacts; fi",
    "clean:frontend": "if [ -d '../frontend/pacts' ]; then rm -rf ../frontend/pacts; fi",
    "test": "mocha --timeout 5000 src/**/*.spec.js",
    "test:twitter": "mocha --timeout 5000 src/twitterProvider/twitterProvider.spec.js",
    "test:sentiment": "mocha --timeout 5000 src/sentiment/sentiment.spec.js",
    "test:sentiment:pact:consumer": "mocha --timeout 5000 src/sentiment/consumerPact.spec.js",
    "test:sentiment:pact:provider": "mocha --timeout 5000 src/sentiment/sentimentProviderPact.spec.js",
    "test:sentiment:pact": "npm run clean && npm run test:sentiment:pact:consumer && npm run test:publish && npm run test:sentiment:pact:provider",
    "test:pact": "npm run clean && mocha --require babel-register src/**/*.spec.js",
    "test:publish": "node ../publish.js",
    "localstack": "./scripts/localstack.sh",
    "arch": "./scripts/arch.sh"
  },
  "dependencies": {
    "aws-sdk": "^2.218.1",
    "aws-signature-v4": "^1.1.0",
    "crypto": "0.0.3",
    "crypto-js": "^3.1.9-1",
    "lodash": "^4.17.5",
    "middy": "^0.15.6",
    "moment": "2.11.1",
    "twit": "^2.2.9"
  },
  "devDependencies": {
    "@pact-foundation/pact": "^6.0.0-alpha.10",
    "aws-sdk-mock": "^2.0.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-3": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^7.1.1",
    "ejs": "^2.5.8",
    "mocha": "^3.5.3",
    "serverless": "^1.26.1",
    "serverless-offline": "^3.20.3",
    "serverless-offline-sns": "^0.40.0",
    "serverless-webpack": "^5.1.1",
    "webpack": "^3.11.0",
    "webpack-node-externals": "^1.6.0"
  }
}
